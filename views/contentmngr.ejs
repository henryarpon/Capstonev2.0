
<%- include('partials/privateheader') -%>
    
<h2 class="h2dashboard">Content Manager</h2>
<p>Currently Logged-in as: <%= username %></p>

</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            
            <form class='col-md-10'>
                <div class="form-group col-md-12">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Enter title" size="50">
                </div>
                <div class="form-group col-md-12">
                    <label for="body">Body</label>
                    <textarea class="form-control" id="body" rows="5" placeholder="Enter your blog post here" cols="100"></textarea>
                </div>
                <div class="form-group col-md-12">
                    <label for="image">Image</label>
                    <input type="file" class="form-control-file" id="image">
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/privatefooter'); -%>